<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/image" android:weightSum="1">

    <Button android:layout_width="70dip"
            android:layout_height="25dip"
            android:text="@string/text_signout"
            android:textSize="16sp"
            android:textColor="#fff9f9fd"
            android:textStyle="bold"
            android:id="@+id/btnLogout"
            android:background="@drawable/btn_sel"
            android:layout_gravity="right" android:layout_margin="2dip"/>

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="PHOTO CLICK"
              android:id="@+id/textview7"
              android:textSize="40sp"
              android:gravity="center"
              android:layout_marginTop="20dip" android:singleLine="false"
              android:textColor="@android:color/primary_text_dark" android:layout_marginBottom="60dip"
              android:visibility="gone"/>

    <ImageView
            android:layout_width="142dp"
            android:layout_height="168dp"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:background="@drawable/logo"
            android:layout_marginTop="2dip"
            android:visibility="visible"
            android:layout_marginBottom="30dip"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:clipChildren="false"
                    android:visibility="visible"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="320.0dip" android:layout_weight="0.10">
        <ImageButton

                android:id="@+id/btnDeviceGallery"
                android:background="@drawable/btn_device"
                android:text="about"
                android:layout_width="150dip"
                android:layout_height="150dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

        <ImageButton

                android:id="@+id/btnSocialSelect"
                android:background="@drawable/btn_social"
                android:layout_width="150dip"
                android:layout_height="150dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"/>

    </RelativeLayout>

    <Button android:layout_width="150dip"
            android:layout_height="30dip"
            android:id="@+id/btnAboutUs"
            android:layout_gravity="center"
            android:background="@drawable/btn_sel"
            android:layout_marginTop="50dip"
            android:text="@string/btn_about_us"
            style="@style/btn"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="@string/client_link"
            android:id="@+id/textCopyRight"
            android:textSize="17sp"
            android:layout_marginTop="55dip"
            android:layout_gravity="center_horizontal|bottom" android:textColor="#FF38A8CE"/>

</LinearLayout>