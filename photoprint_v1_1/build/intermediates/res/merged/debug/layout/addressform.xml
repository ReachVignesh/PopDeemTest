<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/image" android:clickable="true">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@drawable/image" android:weightSum="1">

        <!--  View Title Label -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:text="Address Form"
                android:textSize="35dip"
                android:textStyle="bold" android:textColor="#fffd7324" android:layout_gravity="center"
                android:layout_marginTop="10dip" android:background="#709d9d9d"/>

        <!--  Name TextField -->
        <EditText
                android:id="@+id/addressName"
                android:layout_width="270dp"
                android:layout_height="40dp" android:background="@android:drawable/editbox_background_normal" android:hint="Name"
                android:layout_marginTop="10dp" android:inputType="text" android:layout_gravity="center"/>

        <!--  Region TextField -->
        <EditText
                android:id="@+id/regionName"
                android:layout_width="270dp"
                android:layout_height="40dp" android:background="@android:drawable/editbox_background_normal" android:hint="Region"
                android:layout_marginTop="10dp" android:inputType="text" android:layout_gravity="center"
                />



        <EditText
                android:id="@+id/cityName"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:background="@android:drawable/editbox_background_normal" android:hint="City"
                android:layout_marginTop="10dp" android:inputType="text" android:layout_gravity="center"
                />

        <!--  Street Number TextField -->
        <EditText
                android:id="@+id/streetName"
                android:layout_width="270dip"
                android:layout_height="40dp" android:background="@android:drawable/editbox_background_normal" android:hint="Street"
                android:layout_marginTop="10dp" android:inputType="text" android:layout_gravity="center"
                />

        <!--  House Number TextField -->
        <EditText
                android:id="@+id/houseNumber"
                android:layout_width="270dip"
                android:layout_height="40dp" android:background="@android:drawable/editbox_background_normal" android:hint="House number"
                android:layout_marginTop="10dp" android:inputType="numberSigned" android:layout_gravity="center"
                />

        <!--  Apartment Number TextField -->
        <EditText
                android:id="@+id/apartNumber"
                android:layout_width="270dip"
                android:layout_height="40dp" android:background="@android:drawable/editbox_background_normal" android:hint="Apartment number"
                android:layout_marginTop="10dp" android:inputType="numberSigned" android:layout_gravity="center"
                />

        <!--  Error message -->
        <CheckBox
                android:layout_width="260dip"
                android:layout_height="35dip"
                android:text="           Delivery"
                android:id="@+id/deliveryCheckBox" android:layout_gravity="center"
                android:background="@color/order_row_value" android:textColor="@android:color/darker_gray"
                android:layout_marginTop="10dip"/>

        <TextView android:id="@+id/register_error"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textColor="#e30000"
                  android:padding="10dip"
                  android:textStyle="bold"/>

        <!--  Login Button -->
        <Button
                android:id="@+id/btnAddressSend"
                android:layout_width="150dip"
                android:layout_height="30dip"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_sel"
                android:layout_gravity="center"
                android:text="Send detail"
                />

    </LinearLayout>

</ScrollView>