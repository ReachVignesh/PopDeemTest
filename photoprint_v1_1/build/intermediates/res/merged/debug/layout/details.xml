<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/image" android:clickable="true">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@drawable/image" android:weightSum="1">


        <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"/>

        <!--  View Title Label -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:text="@string/address_form"
                android:textSize="35dip"
                android:textStyle="bold" android:textColor="#ffde4820" android:layout_gravity="center"
                android:layout_marginTop="20dip" android:background="#709d9d9d"/>

        <!--  Name TextField -->
        <EditText
                android:id="@+id/addressName"
                android:layout_width="270dp"
                android:layout_height="40dp" android:background="@android:drawable/editbox_background_normal" android:hint="@string/name"
                android:layout_marginTop="10dp" android:inputType="text" android:layout_gravity="center"/>

        <!--  Region TextField -->
        <EditText
                android:id="@+id/regionName"
                android:layout_width="270dp"
                android:layout_height="40dip"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="@string/region"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:layout_gravity="center"
                android:visibility="visible"/>

        <Spinner
                android:id="@+id/regionSpinner"
                android:layout_width="270dp"
                android:layout_height="28dip"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:visibility="gone"/>

        <EditText
                android:id="@+id/cityName"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:background="@android:drawable/editbox_background_normal" android:hint="@string/city"
                android:layout_marginTop="5dp" android:inputType="text" android:layout_gravity="center"/>

        <!--  Street Number TextField -->
        <EditText
                android:id="@+id/streetName"
                android:layout_width="270dip"
                android:layout_height="40dp" android:background="@android:drawable/editbox_background_normal" android:hint="@string/street"
                android:layout_marginTop="5dp" android:inputType="text" android:layout_gravity="center"/>

        <!--  House Number TextField -->
        <EditText
                android:id="@+id/houseNumber"
                android:layout_width="270dip"
                android:layout_height="40dp" android:background="@android:drawable/editbox_background_normal" android:hint="@string/house_no"
                android:layout_marginTop="5dp" android:inputType="text" android:layout_gravity="center"/>

        <!--  Apartment Number TextField -->
        <EditText
                android:id="@+id/apartNumber"
                android:layout_width="270dip"
                android:layout_height="40dp"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="@string/apart_no"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:layout_gravity="center"/>

        <!--  Apartment Number TextField -->
        <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="270dip"
                android:layout_height="40dp"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="@string/phone_number"
                android:layout_marginTop="5dp"
                android:layout_gravity="center" android:inputType="phone"/>
        <!--  Error message -->
        <CheckBox
                android:layout_width="265dip"
                android:layout_height="35dip"
                android:text="@string/delivery"
                android:id="@+id/deliveryCheck"
                android:layout_gravity="center"
                android:background="@color/order_row_value"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="5dip"/>
        <!--  Payable TextField -->
        <EditText
                android:id="@+id/payable_Amt"
                android:layout_width="270dip"
                android:layout_height="40dp"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="@string/price"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:layout_gravity="center"
                android:visibility="gone"/>

        <TextView
                android:layout_width="265dip"
                android:layout_height="33dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:layout_marginTop="5dp"
                android:id="@+id/payable"
                android:layout_gravity="center"
                android:textColor="@color/grey"
                android:background="@color/white"/>

        <EditText
                android:id="@+id/comment_Back"
                android:layout_width="270dip"
                android:layout_height="60dp"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="@string/comment"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:layout_gravity="center"/>


        <TextView android:id="@+id/register_error"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textColor="#e30000"
                  android:textStyle="bold"/>

        <!--  Login Button -->
        <Button
                android:id="@+id/btnAddressSend"
                android:layout_width="200dip"
                android:layout_height="50dip"
                android:background="@drawable/btn_sel"
                android:layout_gravity="center"
                android:layout_marginBottom="10dip"
                android:text="@string/btn_senddetails"
                android:visibility="visible"/>

    </LinearLayout>

</ScrollView>


