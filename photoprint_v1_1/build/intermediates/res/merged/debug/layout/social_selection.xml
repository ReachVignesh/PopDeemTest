<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/image"
              android:weightSum="1">

    <ImageView
            android:layout_width="250dip"
            android:layout_height="35dip"
            android:layout_marginTop="70dip"
            android:id="@+id/imageView"
            android:background="@drawable/authorize"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.10"/>

    <ImageButton
            android:id="@+id/btnFacebook"
            android:background="@drawable/facebook"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_marginTop="30dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false" android:layout_gravity="center"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:clipChildren="false"
                    android:visibility="visible"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="40dip"
                    android:layout_width="270dip"
                    android:layout_weight="0.10">
        <ImageButton

                android:id="@+id/btnInstagram"
                android:background="@drawable/instagram"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

        <ImageButton

                android:id="@+id/btnVk"
                android:background="@drawable/vk"

                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"/>

    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="@string/client_link"
            android:id="@+id/textCopyRight"
            android:textSize="17sp"
            android:layout_marginTop="125dip" android:layout_gravity="center" android:textColor="#FF38A8CE"/>


</LinearLayout>